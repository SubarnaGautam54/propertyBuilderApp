<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/_10sdp"
    app:cardMaxElevation="@dimen/_5sdp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/_5sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/phaseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phase "
                android:textSize="@dimen/_17sdp"
                android:textColor="@color/primaryDarkColor"/>
            <TextView
                android:id="@+id/phaseCounts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_toRightOf="@id/phaseText"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/primaryColor"/>
            <ImageView
                android:id="@+id/removePhase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close_orange"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_5sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/primaryDarkColor"
                android:text="Phase Description: "/>
            <TextView
                android:id="@+id/phaseDescription_phase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/_10sdp">
            <Button
                android:id="@+id/phaseDetailsBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:text="View Phase Details"
                android:textSize="@dimen/_16sdp"
                android:textAllCaps="false"
                android:backgroundTint="@color/primaryMuchLightColor" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>